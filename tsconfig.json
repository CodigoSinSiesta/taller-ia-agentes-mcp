{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true
  },
  "include": [
    "agentes/**/*.ts",
    "mcp-servers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
